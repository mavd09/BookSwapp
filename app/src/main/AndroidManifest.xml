<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.unal.bookswapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To pick a gallery image or take a photo -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity" android:label="@string/login_action_bar_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" android:label="@string/register_action_bar_label"></activity>
        <activity android:name=".MessagesActivity" android:label="@string/messages_action_bar_label"></activity>
        <activity android:name=".MyOfferActivity" android:label="@string/my_offer_action_bar_label"></activity>
        <activity android:name=".NewOfferActivity" android:label="@string/new_offer_action_bar_label"></activity>
        <activity android:name=".ProfileActivity" android:label="@string/profile_action_bar_label"></activity>
        <activity android:name=".SearchActivity" android:label="@string/search_action_bar_label"></activity>
    </application>

</manifest>